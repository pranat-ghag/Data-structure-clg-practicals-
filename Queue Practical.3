class queue
{
public:
int arr[5],i,front,rear,size;
queue()
{
front = -1;
 size = 5;
 rear = -1;
}
void insert()
{
if(rear < size-1)
{
  rear ++;
  cout<<"Enter The Element  in Queue : ";
  cin>>arr[rear];

  }
else
{
  cout<<"The Queue is overflow..";
}

}
void del()
{
 if(rear == 0 || front == rear)
 {
   cout<<"The Array Is empty..";
 }
 else
 {
 front ++;
 cout<<arr[front]<<" is Deleted..";
  }
}
void display()
{
cout<<"Array : ";
for ( i=front+1;i<=rear;i++)
{
cout<<arr[i]<<"\t";
}
}

};
